<div class="container my-5">
    <div class="jumbotron">
        <h1>Log In</h1>
        <br>
        <form class="form" action="/auth/login" method="post" role="form" autocomplete="off">
            <div class="form-group">
                <input id="email" name="email" placeholder="email" class="form-control" type="text" required>
            </div>

            <div class="form-group">
                <input id="password" name="password" placeholder="password" class="form-control" type="password" required>
            </div>

            <div class="form-group">
                <input class="btn btn-success my-3" type="submit" value="Log in">
            </div>
        </form>

        <hr>

        <div class="text-left">
            <button class="btn btn-success my-3" onclick="location.href = '/auth/register'">Ir a Register</button>
            <button class="btn btn-success my-3" onclick="location.href = '/auth/restorePassword'">Restaurar Contrase√±a</button>
        </div>
    </div>

</div>